package hw4;

import java.util.Scanner;

public class Zad2 {
	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		//determine size of array
		int row=0;
		do {
			System.out.println("Input rows:");
			row = sc.nextInt();
		} while(row<1);

		int col=0;
		do {
			System.out.println("Input columns:");
			col = sc.nextInt();
		} while(col<1);
		//
		
	}
}
