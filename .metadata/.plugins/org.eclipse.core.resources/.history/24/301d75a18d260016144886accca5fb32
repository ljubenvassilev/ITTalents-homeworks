package hw4;

public class Zad7 {

	public static void main (String[] args){
		
		//init array
		int[][] arr = {
						{48,72,13,14,15,34},
						{21,22,53,24,75,17},
						{31,57,33,34,35,32},
						{41,95,43,44,45,49},
						{59,52,53,54,55,51},
						{61,69,63,64,65,66}
					};
		int sumRow=0;
		int sum=0;
		for (int i = 0; i < arr.length*arr.length; i++) {
			if((i/6+i%6)%2==0){
				System.out.print(arr[i/6][i%6]+" ");
				sumRow+=arr[i/6][i%6];
			}
			if(i%6==0&&i/6!=0){
				System.out.println("Sum of elements on row = "+sumRow);
				sum+=sumRow;
				sumRow=0;
			}
		}
		System.out.println("Total sum is "+sum);
	}
}
